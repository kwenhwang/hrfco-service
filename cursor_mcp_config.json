{
    "mcpServers": {
        "hrfco-service": {
            "command": "python",
            "args": [
                "mcp_server.py"
            ],
            "env": {
                "HRFCO_API_KEY": "실제_API_키_입력_필요"
            },
            "description": "한국수자원공사 홍수통제소 API MCP 서버 - 수위, 강우량, 댐 데이터 제공"
        },
        "context7": {
            "command": "npx",
            "args": ["-y", "@upstash/context7-mcp@latest"]
        },
        "web-search": {
            "command": "npx", 
            "args": ["-y", "@mnhlt/websearch-mcp"]
        },
        "sequential-thinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        }
    }
}